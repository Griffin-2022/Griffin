# name: test/sql/cast/boolean_autocast.test
# description: Test boolean auto casts
# group: [cast]

;
PRAGMA enable_verification

# boolean <-> integer
;
SELECT true=1;
;
true

;
SELECT true=0;
;
false

;
SELECT false=0;
;
true

;
SELECT false=1;
;
false

;
SELECT 1=true;
;
true

;
SELECT 0=true;
;
false

;
SELECT 0=false;
;
true

;
SELECT 1=false;
;
false

# boolean <-> string
;
SELECT true='1';
;
true

;
SELECT true='0';
;
false

;
SELECT false='0';
;
true

;
SELECT false='1';
;
false

;
SELECT true='true';
;
true

;
SELECT true='false';
;
false

;
SELECT false='false';
;
true

;
SELECT false='true';
;
false

;
SELECT '1'=true;
;
true

;
SELECT '0'=true;
;
false

;
SELECT '0'=false;
;
true

;
SELECT '1'=false;
;
false

;
SELECT true='true';
;
true

;
SELECT true='false';
;
false

;
SELECT false='false';
;
true

;
